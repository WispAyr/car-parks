<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Parking Events Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', Arial, sans-serif;
            margin: 0;
            background: linear-gradient(120deg, #f5f5f5 60%, #e0e7ff 100%);
        }
        .header {
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            padding: 32px 0 16px 0;
            margin-bottom: 0;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        h1 {
            color: #333;
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            letter-spacing: 1px;
            margin: 0;
        }
        .nav {
            text-align: center;
            margin: 18px 0 24px 0;
        }
        .nav a {
            display: inline-block;
            margin: 0 10px;
            padding: 8px 18px;
            border-radius: 6px;
            background: #e0e7ff;
            color: #333;
            text-decoration: none;
            font-weight: 500;
            transition: background 0.2s;
        }
        .nav a.active, .nav a:hover {
            background: #6366f1;
            color: #fff;
        }
        .filter-bar {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: center;
            gap: 18px;
            background: #f8fafc;
            border: 1.5px solid #e0e7ff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(99,102,241,0.04);
            padding: 18px 18px 10px 18px;
            margin: 0 auto 24px auto;
            max-width: 1200px;
        }
        .filter-bar label {
            margin-right: 6px;
            font-weight: 500;
        }
        .filter-bar select, .filter-bar button {
            min-width: 120px;
            border-radius: 6px;
            border: 1px solid #c7d2fe;
            padding: 6px 12px;
            font-size: 1em;
        }
        .timezone-btn {
            margin-left: 8px;
            padding: 6px 12px;
            border-radius: 6px;
            border: 1px solid #6366f1;
            background: #fff;
            color: #6366f1;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }
        .timezone-btn:hover {
            background: #6366f1;
            color: #fff;
        }
        .events-table {
            width: 96vw;
            max-width: 1200px;
            margin: 0 auto 32px auto;
            border-collapse: collapse;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.08);
            overflow: hidden;
        }
        .events-table th, .events-table td {
            padding: 12px 10px;
            text-align: left;
        }
        .events-table th {
            background: #e0e7ff;
            color: #333;
            font-weight: 600;
        }
        .events-table tr:nth-child(even) {
            background: #f5f5f5;
        }
        .flag {
            color: #fff;
            background: #f59e42;
            border-radius: 4px;
            padding: 2px 8px;
            font-size: 0.95em;
            font-weight: 600;
        }
        .badge {
            border-radius: 2em !important;
            font-size: 1em;
            padding: 0.45em 1.2em;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5em;
        }
        .image-cell {
            background: #f8fafc;
            text-align: center;
            vertical-align: middle;
        }
        .thumbnail {
            width: 56px;
            height: 56px;
            object-fit: cover;
            border-radius: 6px;
            border: 1.5px solid #e0e7ff;
            box-shadow: 0 2px 8px rgba(99,102,241,0.08);
            transition: transform 0.18s, box-shadow 0.18s;
        }
        .thumbnail:hover {
            transform: scale(1.12);
            box-shadow: 0 4px 16px rgba(99,102,241,0.18);
            z-index: 2;
        }
        @media (max-width: 900px) {
            .filter-bar { flex-direction: column; gap: 10px; padding: 12px 6px; }
            .events-table, .events-table th, .events-table td { font-size: 13px; }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Parking Events</h1>
    </div>
    <div class="nav">
        <a href="/events" class="<%= tab === 'completed' ? 'active' : '' %>">Completed Events</a>
        <a href="/currently-parked" class="<%= tab === 'parked' ? 'active' : '' %>">Currently Parked</a>
        <a href="/all-events" class="<%= tab === 'all' ? 'active' : '' %>">All Events</a>
        <form action="/admin/generate-events" method="GET" style="display: inline;">
            <button type="submit" class="btn btn-primary" style="margin-left: 10px;">Generate Events</button>
        </form>
    </div>
    <% if (typeof message !== 'undefined' && message) { %>
        <div class="alert alert-success" style="max-width: 800px; margin: 20px auto;">
            <%= message %>
        </div>
    <% } %>
    <div class="filter-bar">
        <label for="siteSelect">Car Park:</label>
        <select id="siteSelect" class="form-select" style="width: auto; display: inline-block;">
            <option value="">All</option>
            <% carparks.forEach(cp => { %>
                <option value="<%= cp.siteId %>" <%= selectedCarPark === cp.siteId ? 'selected' : '' %>><%= cp.name %></option>
            <% }) %>
        </select>
        <label for="eventType">Event Type:</label>
        <select id="eventType" class="form-select" style="width: auto; display: inline-block;">
            <option value="all">All Events</option>
            <option value="completed">Completed Only</option>
            <option value="parked">Currently Parked</option>
            <option value="through">Through Traffic</option>
        </select>
        <label for="statusFilter">Status:</label>
        <select id="statusFilter" class="form-select" style="width: auto; display: inline-block;">
            <option value="">All</option>
            <option value="whitelisted">Whitelisted</option>
            <option value="paid">Paid</option>
            <option value="unpaid">Unpaid</option>
        </select>
        <button id="timezoneToggle" class="timezone-btn" onclick="toggleTimezone()">
            Switch to GMT
        </button>
    </div>
    <div class="table-responsive">
        <table class="events-table">
            <thead>
                <tr>
                    <th>Car Park</th>
                    <th>VRM</th>
                    <th>Entry Time</th>
                    <th>Exit Time</th>
                    <th>Duration</th>
                    <th>Status</th>
                    <th>Type</th>
                    <th>Entry Camera</th>
                    <th>Exit Camera</th>
                    <th>Entry Image</th>
                    <th>Exit Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% events.forEach(event => { %>
                    <tr class="event-row" 
                        data-event-type="<%= !event.exitTime ? 'parked' : (event.throughTraffic ? 'through' : 'completed') %>">
                        <td><%= event.carParkName %></td>
                        <td><%= event.VRM %></td>
                        <td class="timestamp" data-timestamp="<%= event.entryTime %>">
                            <%= new Date(event.entryTime).toLocaleString() %>
                        </td>
                        <td class="timestamp" data-timestamp="<%= event.exitTime %>">
                            <%= event.exitTime ? new Date(event.exitTime).toLocaleString() : 'Still Parked' %>
                        </td>
                        <td>
                            <%= event.durationMinutes ? Math.round(event.durationMinutes) + ' min' : '-' %>
                        </td>
                        <td>
                            <% if (event.status === 'whitelisted') { %>
                                <span class="badge bg-success"><i class="bi bi-shield-check"></i> Whitelisted</span>
                            <% } else if (event.status === 'paid') { %>
                                <span class="badge bg-primary"><i class="bi bi-currency-pound"></i> Paid</span>
                            <% } else if (event.status === 'unpaid') { %>
                                <span class="badge bg-danger"><i class="bi bi-exclamation-circle"></i> Unpaid</span>
                            <% } else { %>
                                <span class="badge bg-secondary">-</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (event.entryCameraName) { %>
                                <i class="fa fa-video" title="Entry Camera"></i>
                                <span title="<%= event.entryCameraName %>"><%= event.entryCameraName %></span>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (event.exitCameraName) { %>
                                <i class="fa fa-video" title="Exit Camera"></i>
                                <span title="<%= event.exitCameraName %>"><%= event.exitCameraName %></span>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td class="image-cell">
                            <% if (event.entryDetectionId && event.hasEntryImage1) { %>
                                <img src="/image/<%= event.entryDetectionId %>/1" alt="Entry Image" class="thumbnail" onerror="this.src='/images/placeholder.jpg'" onclick="showImageModal('/image/<%= event.entryDetectionId %>/1')">
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td class="image-cell">
                            <% if (event.exitDetectionId && event.hasExitImage1) { %>
                                <img src="/image/<%= event.exitDetectionId %>/1" alt="Exit Image" class="thumbnail" onerror="this.src='/images/placeholder.jpg'" onclick="showImageModal('/image/<%= event.exitDetectionId %>/1')">
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td>
                            <a href="/events/<%= event.id %>" class="btn btn-sm btn-outline-primary">Details</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Image Preview Modal -->
    <div class="modal fade" id="imagePreviewModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Image Preview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="previewImage" class="img-fluid" alt="Detection Image">
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <% let basePath = '/events'; if (tab === 'all') { basePath = '/all-events'; } else if (tab === 'parked') { basePath = '/currently-parked'; } %>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Site filter
            const siteSelect = document.getElementById('siteSelect');
            siteSelect.addEventListener('change', function() {
                const url = new URL(window.location.href);
                url.searchParams.set('siteId', this.value);
                window.location.href = url.toString();
            });

            // Event type filter
            const eventTypeSelect = document.getElementById('eventType');
            eventTypeSelect.addEventListener('change', function() {
                const rows = document.querySelectorAll('.event-row');
                const selectedType = this.value;
                
                rows.forEach(row => {
                    if (selectedType === 'all' || row.dataset.eventType === selectedType) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

            // Timezone toggle
            let isGMT = false;
            window.toggleTimezone = function() {
                isGMT = !isGMT;
                const button = document.getElementById('timezoneToggle');
                button.textContent = isGMT ? 'Switch to Local Time' : 'Switch to GMT';
                
                document.querySelectorAll('.timestamp').forEach(cell => {
                    const timestamp = cell.dataset.timestamp;
                    if (timestamp) {
                        const date = new Date(timestamp);
                        cell.textContent = isGMT ? 
                            date.toUTCString() : 
                            date.toLocaleString();
                    }
                });
            };

            document.getElementById('statusFilter').addEventListener('change', function() {
                var value = this.value;
                document.querySelectorAll('tr.event-row').forEach(function(row) {
                    var status = row.querySelector('td:nth-child(6) .badge').textContent.trim().toLowerCase();
                    if (!value || status === value) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });

        function showImageModal(imageUrl) {
            const img = document.getElementById('previewImage');
            img.src = imageUrl;
            const modal = new bootstrap.Modal(document.getElementById('imagePreviewModal'));
            modal.show();
        }
    </script>
</body>
</html> 