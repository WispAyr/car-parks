<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Parks Management - ANPR Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Car Parks Management</h1>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#carParkModal">
                Add New Car Park
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Location</th>
                        <th>Through Traffic Rule</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% carParks.forEach(carPark => { %>
                        <tr>
                            <td><%= carPark.name %></td>
                            <td><%= carPark.location %></td>
                            <td><%= carPark.throughTrafficRule %></td>
                            <td>
                                <button class="btn btn-sm btn-primary edit-car-park" 
                                        data-id="<%= carPark.id %>"
                                        data-name="<%= carPark.name %>"
                                        data-location="<%= carPark.location %>"
                                        data-rule="<%= carPark.throughTrafficRule %>">
                                    Edit
                                </button>
                                <button class="btn btn-sm btn-danger delete-car-park" data-id="<%= carPark.id %>">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Car Park Modal -->
    <div class="modal fade" id="carParkModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Car Park Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="carParkForm">
                        <input type="hidden" id="carParkId">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" class="form-control" id="location" required>
                        </div>
                        <div class="mb-3">
                            <label for="throughTrafficRule" class="form-label">Through Traffic Rule</label>
                            <select class="form-select" id="throughTrafficRule" required>
                                <option value="none">No Through Traffic</option>
                                <option value="5min">5 Minutes</option>
                                <option value="10min">10 Minutes</option>
                                <option value="15min">15 Minutes</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="saveCarPark">Save</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('carParkModal'));
            const form = document.getElementById('carParkForm');
            const saveButton = document.getElementById('saveCarPark');

            // Edit car park
            document.querySelectorAll('.edit-car-park').forEach(button => {
                button.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const name = this.dataset.name;
                    const location = this.dataset.location;
                    const rule = this.dataset.rule;

                    document.getElementById('carParkId').value = id;
                    document.getElementById('name').value = name;
                    document.getElementById('location').value = location;
                    document.getElementById('throughTrafficRule').value = rule;

                    modal.show();
                });
            });

            // Delete car park
            document.querySelectorAll('.delete-car-park').forEach(button => {
                button.addEventListener('click', async function() {
                    if (confirm('Are you sure you want to delete this car park?')) {
                        const id = this.dataset.id;
                        try {
                            const response = await fetch(`/api/carparks/${id}`, {
                                method: 'DELETE'
                            });
                            if (response.ok) {
                                window.location.reload();
                            } else {
                                alert('Failed to delete car park');
                            }
                        } catch (error) {
                            console.error('Error:', error);
                            alert('Failed to delete car park');
                        }
                    }
                });
            });

            // Save car park
            saveButton.addEventListener('click', async function() {
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                const id = document.getElementById('carParkId').value;
                const data = {
                    name: document.getElementById('name').value,
                    location: document.getElementById('location').value,
                    throughTrafficRule: document.getElementById('throughTrafficRule').value
                };

                try {
                    const response = await fetch(`/api/carparks${id ? `/${id}` : ''}`, {
                        method: id ? 'PUT' : 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });

                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to save car park');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Failed to save car park');
                }
            });
        });
    </script>
</body>
</html> 