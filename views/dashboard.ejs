<%- include('partials/header') %>

<link rel="stylesheet" href="/css/dashboard.css">
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Car Park Management Dashboard</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <h3 class="display-4 mb-2"><i class="bi bi-p-square"></i></h3>
                                    <h5>Parking Events</h5>
                                    <p class="text-muted">View and manage all parking events</p>
                                    <a href="/events" class="btn btn-primary">View Events</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <h3 class="display-4 mb-2"><i class="bi bi-camera"></i></h3>
                                    <h5>Real-time Detections</h5>
                                    <p class="text-muted">Monitor ANPR camera detections in real-time</p>
                                    <a href="/realtime" class="btn btn-primary">View Detections</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body text-center">
                                    <h3 class="display-4 mb-2"><i class="bi bi-gear"></i></h3>
                                    <h5>Administration</h5>
                                    <p class="text-muted">Configure system settings and manage car parks</p>
                                    <a href="/admin" class="btn btn-primary">Admin Panel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Currently Parked Vehicles</h5>
                </div>
                <div class="card-body">
                    <p>View vehicles currently parked in your car parks.</p>
                    <a href="/currently-parked" class="btn btn-outline-primary">View Currently Parked</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">Event Generation</h5>
                </div>
                <div class="card-body">
                    <p>Generate parking events from ANPR detection data.</p>
                    <a href="/admin/event-generation" class="btn btn-outline-primary">Generate Events</a>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">