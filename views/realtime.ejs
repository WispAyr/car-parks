<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live ANPR Detections - NOC Wallboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: var(--bg-gradient);
            color: var(--text-main);
            font-family: 'Inter', Arial, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }
        .wallboard-header {
            text-align: center;
            padding: 32px 0 16px 0;
            font-size: 2.8rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: var(--text-main);
            background: var(--header-bg);
            box-shadow: 0 2px 16px rgba(0,0,0,0.12);
        }
        .detections-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
            gap: 32px;
            padding: 32px 48px 48px 48px;
            max-width: 100vw;
        }
        .detection-card {
            background: var(--table-bg);
            border-radius: 18px;
            box-shadow: var(--shadow-main);
            overflow: hidden;
            display: flex;
            flex-direction: column;
            align-items: stretch;
            min-height: 340px;
            border: 2px solid var(--badge-primary);
            position: relative;
        }
        .detection-images {
            display: flex;
            gap: 0;
            width: 100%;
            background: var(--table-row-alt);
        }
        .detection-images img {
            width: 50%;
            height: 220px;
            object-fit: cover;
            background: var(--table-row-alt);
            border-right: 1px solid var(--border-main);
        }
        .detection-images img:last-child {
            border-right: none;
        }
        .detection-info {
            padding: 18px 22px 12px 22px;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        .vrm {
            font-size: 2.1rem;
            font-weight: 700;
            letter-spacing: 2px;
            color: #fbbf24;
            text-shadow: 0 2px 8px #000a;
        }
        .meta-row {
            display: flex;
            gap: 18px;
            flex-wrap: wrap;
            align-items: center;
        }
        .meta-label {
            font-size: 1.1rem;
            font-weight: 500;
            color: var(--badge-primary);
        }
        .meta-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-main);
        }
        .direction-badge {
            font-size: 1.1rem;
            font-weight: 600;
            padding: 4px 14px;
            border-radius: 8px;
            background: var(--badge-primary);
            color: #fff;
            margin-right: 8px;
        }
        .direction-in { background: #22c55e !important; }
        .direction-out { background: #ef4444 !important; }
        .direction-unknown { background: #6b7280 !important; }
        .confidence-badge {
            font-size: 1.1rem;
            font-weight: 600;
            padding: 4px 14px;
            border-radius: 8px;
            background: #fbbf24;
            color: #232526;
        }
        .camera-badge {
            font-size: 1.1rem;
            font-weight: 600;
            padding: 4px 14px;
            border-radius: 8px;
            background: var(--badge-primary);
            color: #fff;
        }
        .timestamp {
            font-size: 1.1rem;
            color: var(--text-muted);
            font-weight: 500;
        }
        @media (max-width: 900px) {
            .detections-grid {
                padding: 12px;
                gap: 16px;
            }
            .detection-card {
                min-height: 260px;
            }
            .detection-images img {
                height: 120px;
            }
        }
    </style>
    <script>
        // Auto-refresh every 10 seconds
        setTimeout(() => { window.location.reload(); }, 10000);
    </script>
</head>
<body>
    <div class="wallboard-header">Live ANPR Detections</div>
    
    <!-- Car Park Filter -->
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <form action="/realtime" method="GET" class="d-flex">
                    <select name="siteId" class="form-select me-2">
                        <option value="">All Car Parks</option>
                        <% if (typeof carparks !== 'undefined' && carparks) { %>
                            <% carparks.forEach(function(carpark) { %>
                                <option value="<%= carpark.siteId %>" <%= selectedCarPark === carpark.siteId ? 'selected' : '' %>>
                                    <%= carpark.name %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                    <button type="submit" class="btn btn-primary">Filter</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="detections-grid">
        <% detections.forEach(function(detection) { %>
            <div class="detection-card">
                <div class="detection-images">
                    <% if (detection.hasImage1) { %>
                        <img src="/image/<%= detection.id %>/1" alt="Image 1" onerror="this.src='/images/placeholder.jpg'">
                    <% } else { %>
                        <img src="/images/placeholder.jpg" alt="No Image 1">
                    <% } %>
                    <% if (detection.hasImage2) { %>
                        <img src="/image/<%= detection.id %>/2" alt="Image 2" onerror="this.src='/images/placeholder.jpg'">
                    <% } else { %>
                        <img src="/images/placeholder.jpg" alt="No Image 2">
                    <% } %>
                </div>
                <div class="detection-info">
                    <div class="vrm"><%= detection.VRM %></div>
                    <div class="meta-row">
                        <span class="meta-label">Time:</span>
                        <span class="timestamp"><%= detection.timestamp %></span>
                    </div>
                    <div class="meta-row">
                        <span class="direction-badge direction-<%= detection.direction ? detection.direction.toLowerCase() : 'unknown' %>">
                            <%= detection.direction %>
                        </span>
                        <span class="confidence-badge">
                            <%= detection.confidence %>%
                        </span>
                        <span class="camera-badge">
                            <%= detection.cameraID %>
                        </span>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
    
    <!-- Pagination -->
    <% if (typeof totalPages !== 'undefined' && totalPages > 0) { %>
    <div class="container mt-4 mb-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <% if (typeof page !== 'undefined' && page > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/realtime?page=<%= page-1 %><%= selectedCarPark ? '&siteId=' + selectedCarPark : '' %>">
                                    Previous
                                </a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link">Previous</span>
                            </li>
                        <% } %>
                        
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= (typeof page !== 'undefined' && page === i) ? 'active' : '' %>">
                                <a class="page-link" href="/realtime?page=<%= i %><%= selectedCarPark ? '&siteId=' + selectedCarPark : '' %>">
                                    <%= i %>
                                </a>
                            </li>
                        <% } %>
                        
                        <% if (typeof page !== 'undefined' && typeof totalPages !== 'undefined' && page < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/realtime?page=<%= page+1 %><%= selectedCarPark ? '&siteId=' + selectedCarPark : '' %>">
                                    Next
                                </a>
                            </li>
                        <% } else { %>
                            <li class="page-item disabled">
                                <span class="page-link">Next</span>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <% } %>
</body>
</html>